<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout

            android:layout_width="409dp"
            android:layout_height="729dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/image_size_icon"
                android:layout_height="@dimen/image_size_icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                android:src="@drawable/cat" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abdulrahman Hussam"
                android:layout_toEndOf="@id/imageView"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/Options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:text="..."
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/postText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:text="@string/post_Text"
                android:layout_below="@id/imageView"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                />

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_size_post"
                android:layout_below="@id/postText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:src="@drawable/cat" />
            <TextView
                android:id="@+id/numberOfComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Comments"
                android:layout_below="@id/postImage"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/numberOfViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="356 Views"
                android:layout_below="@id/postImage"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"

                />
            />


        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>